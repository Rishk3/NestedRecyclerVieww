<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ItemDetails">

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                android:orientation="vertical"
                android:id="@+id/image_linear"
                android:paddingHorizontal="24dp"
                android:paddingVertical="16dp"
                android:background="@drawable/card_border"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/hollywood3"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/name_linear"
                android:background="@drawable/card_border"
                android:orientation="vertical"
                android:paddingLeft="16dp"
                android:paddingRight="40dp"
                android:paddingVertical="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/image_linear">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/spotBlack"
                    android:text="Asus Core i5 10th Gen- (8GB/512 GB SSD/Windows 10/2GB graphics Asus Core i5 10th Gen)"
                    android:lines="2"
                    android:ellipsize="end"/>
                    <LinearLayout
    android:layout_marginTop="8dp"
    android:layout_marginLeft="4dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <TextView
        android:id="@+id/item_price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="₹ 73,500"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textColor="#000000" />
    <TextView
        android:layout_marginLeft="8dp"
        android:id="@+id/item_old_price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="₹ 85,200"
        android:foreground="@drawable/strike_through_text"
        android:textStyle="bold"
        android:textSize="12sp"
         />
</LinearLayout>
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="45% Off"
                   android:layout_marginLeft="4dp"
                   android:textColor="@color/offer"
                   android:textSize="16sp"/>


            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="16dp"
                android:paddingRight="32dp"
                android:paddingVertical="16dp"
                android:id="@+id/description_linear"
                app:layout_constraintTop_toBottomOf="@id/name_linear">

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Description"
                    android:textColor="@color/spotBlack"/>

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="match_parent"
                    android:layout_marginTop="2dp"
                    android:layout_height="wrap_content"
                    android:text="This product is our special product made only for you especially in the lockdown This product is our special product made only for you especially in the lockdown This product is our special product made only for you especially in the lockdown"
                    android:lines="3"
                    android:ellipsize="end"
                    android:paddingLeft="8dp"
                    android:textSize="12sp"
                    />

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="match_parent"
                    android:layout_marginTop="8dp"
                    android:textColor="@color/spotBlack"
                    android:layout_height="wrap_content"
                    android:text="Expected Delivery Time" />

                <TextView
                    android:id="@+id/textView6"
                    android:textSize="12sp"
                    android:layout_width="match_parent"
                    android:layout_marginTop="2dp"
                    android:layout_marginLeft="8dp"
                    android:layout_height="wrap_content"
                    android:text="Expect your Delivery within 3 hours of your order" />
            </LinearLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/description_linear">

                <LinearLayout
                    android:id="@+id/linearLayout2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:orientation="vertical"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Policy"
                        android:textColor="@color/spotBlack" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:layout_marginTop="2dp"

                        android:text="Hurray! This item is refundable"
                        android:textColor="#e60505" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:text="*terms and conditions"
                        android:textColor="#047bd5"
                        android:textSize="10sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/linearLayout2"
                    app:layout_constraintTop_toTopOf="parent">

                    <Button
                        android:id="@+id/button2"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:background="@drawable/quantity_button_border"
                        android:textSize="20sp"
                        android:textColor="#000"
                        android:textStyle="bold"
                        android:text="-" />

                    <Button
                        android:id="@+id/button3"
                        android:layout_width="40dp"
                        android:layout_height="30dp"
                        android:textColor="#fff"
                        android:textSize="20sp"
                        android:background="#7a1263"
                        android:text="2" />

                    <Button
                        android:id="@+id/button4"
                        android:layout_width="40dp"
                        android:layout_height="30dp"
                        android:textSize="20sp"
                        android:textColor="#000"
                        android:textStyle="bold"
                        android:background="@drawable/quantity_button_border"
                        android:text="+" />
                </LinearLayout>


            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/item_price_bottom"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:paddingVertical="12dp"
            android:text="₹ 73,500"
            android:background="@drawable/quantity_button_border"
            android:textColor="#000000"
            android:textSize="20sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:background="@color/colorPrimaryDark"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingVertical="12dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"

                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:paddingHorizontal="8dp"
                    android:src="@drawable/ic_baseline_add_shopping_cart_24" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Add To Cart"
                    android:textColor="#fff"
                    android:textSize="18sp" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>